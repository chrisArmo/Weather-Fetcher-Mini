<form id="address">
  <div class="form-group">
    <label for="city">City</label>
    <input 
      type="text" 
      class="form-control" 
      id="city"
      placeholder="example: Los Angeles"
      required>
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <input 
      type="text" 
      class="form-control" 
      id="state"
      placeholder="example: California"
      required>
  </div>

  <div class="form-group mt-4 text-center">
    <button class="btn btn-dark" type="submit">Get Weather</button>
  </div>
</form>